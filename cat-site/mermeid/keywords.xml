<?xml version="1.0" encoding="UTF-8"?>
<classification xmlns="http://www.music-encoding.org/ns/mei">
    
    <!-- 
        This file defines systematic keywords for the classification of works. 
        The structured keywords are used to create the structured part of the 
        keywords menu at the "Work" tab. 
        They may be used to generate a catalog's hierarchical menu of genres
        like the one in the CNW (http://www.kb.dk/dcm/cnw.html). 
    -->
    
    <!-- Structured classification, 2 levels -->
    
    <taxonomy xml:id="Genre">
        <category xml:id="StageMusic">
            <desc>Stage music</desc>
            <category xml:id="Opera">
                <desc>Opera</desc>
            </category>
            <category xml:id="IncidentalMusic">
                <desc>Incidental music</desc>
            </category>
            <category xml:id="Ballet">
                <desc>Ballet</desc>
            </category>
        </category>
        <category xml:id="InstrumentalMusic">
            <desc>Instrumental music</desc>
            <category xml:id="Symphony">
                <desc>Symphony</desc>
            </category>
            <category xml:id="Concerto">
                <desc>Concerto</desc>
            </category>
            <category xml:id="OtherOrchestralMusic">
                <desc>Other orchestral music</desc>
            </category>
            <category xml:id="ChamberMusic">
                <desc>Chamber music</desc>
            </category>
            <category xml:id="MusicForOneInstrument">
                <desc>Music for one instrument</desc>
            </category>
        </category>
        <category xml:id="VocalMusic">
            <desc>Vocal music</desc>
            <category xml:id="VocalMusicSoloistsInstrumentsOptionalChoir">
                <desc>Music for vocal soloists and instruments with or without choir</desc>
            </category>
            <category xml:id="ChoralMusicWithInstrumental">
                <desc>Choral music with instruments</desc>
            </category>
            <category xml:id="UnaccompaniedChoralMusic">
                <desc>A cappella choral music</desc>
            </category>
            <category xml:id="Song">
                <desc>Song</desc>
            </category>
        </category>
    </taxonomy>
    
    <!-- Unordered supplementary keywords (may also be entered manually in the editor instead)  -->
    
    <termList label="work_keywords">
        <term>Trio</term>
        <term>Quartet</term>
        <term>Quintet</term>
        <term>Sextet</term>
        <term>Septet</term>
        <term>Octet</term>
        <term>String trio</term>
        <term>String quartet</term>
        <term>String quintet</term>
        <term>Piano trio</term>
        <term>Piano quartet</term>
        <term>Piano quintet</term>
        <term>Wind quartet</term>
        <term>Wind quintet</term>
        <term>Oratorio</term>
        <term>Mass</term>
        <term>Cantata</term>
        <term>Motet</term>
        <term>Lied</term>            
    </termList>          
</classification>



